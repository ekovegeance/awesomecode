{
  "name": "awesomecode",
  "displayName": "Awesomecode",
  "description": "Awesomecode theme and code editor setup for VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekovegeance/awesomecode"
  },
  "version": "2.0.2",
  "publisher": "ekovegeance",
  "sponsor": {
    "url": "https://github.com/sponsors/ekovegeance"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#18181b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "awesomecode",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "id": "awesomecode-theme",
        "label": "Awesomecode Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/awesomecode-color-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "awesomecode-icon-theme",
        "label": "Awesomecode Icon Theme",
        "uiTheme": "vs-dark",
        "path": "./fileicons/awesomecode-icon-theme.json"
      }
    ],
    "configurationDefaults": {
      "[awesomecode]": {
        "workbench.colorTheme": "Awesomecode Theme",
        "workbench.iconTheme": "Awesomecode Icon Theme"
      },
      "workbench.tree.indent": 14,
      "workbench.statusBar.visible": false,
      "workbench.editor.showTabs": "single",
      "workbench.sideBar.location": "right",
      "workbench.editor.empty.hint": "hidden",
      "workbench.layoutControl.enabled": false,
      "workbench.iconTheme": "awesomecode-icon-theme",
      "workbench.activityBar.location": "hidden",
      "workbench.editorLargeFileConfirmation": 10024,
      "workbench.editor.editorActionsLocation": "hidden",
      "workbench.preferredLightColorTheme": "awesomecode-theme",

      "window.zoomLevel": 0,
      "window.nativeTabs": false,
      "window.commandCenter": false,
      "window.titleBarStyle": "custom",
      "window.autoDetectColorScheme": true,

      "breadcrumbs.enabled": true,
      "breadcrumbs.filePath": "on",
      "breadcrumbs.symbolPath": "off",

      "editor.fontSize": 12,
      "editor.lineHeight": 28,
      "editor.lineNumbers": "off",
      "editor.minimap.size": "fit",
      "editor.detectIndentation": true,
      "editor.minimap.enabled": false,
      "editor.renderWhitespace": "none",
      "editor.cursorBlinking": "smooth",
      "editor.guides.indentation": false,
      "editor.inlineSuggest.enabled": true,
      "editor.scrollbar.vertical": "hidden",
      "editor.suggest.showStatusBar": false,
      "editor.minimap.showSlider": "always",
      "editor.autoClosingBrackets": "always",
      "editor.renderControlCharacters": false,
      "editor.minimap.renderCharacters": false,
      "editor.scrollbar.verticalScrollbarSize": 1,
      "editor.semanticTokenColorCustomizations": {},
      "editor.bracketPairColorization.enabled": true,
      "editor.codeActionWidget.includeNearbyQuickFixes": true,
      "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",

      "files.autoSave": "onFocusChange"
    }
  }
}
